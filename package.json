		"@zeit/ncc": "^0.22.3",
		"eslint": "^7.4.0",
		"eslint-plugin-jest": "^23.18.0",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"jest-circus": "^26.1.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.2",
