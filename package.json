		"ts-jest": "^24.0.2",
		"typescript": "^3.6.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test && npm run build",
			"post-commit": "npm prune --production && git add node_modules/* && git commit -m \"chore: fix node_modules with husky\""
